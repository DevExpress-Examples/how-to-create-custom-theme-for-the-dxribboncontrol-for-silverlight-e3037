                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="PART_ArrowBorder" Storyboard.TargetProperty="HideBorderSide" dxcn:ValueSetter.HideBorderSide="Left" />
                        </Storyboard>
                    </VisualState>
                    <VisualState x:Name="NoArrow">
