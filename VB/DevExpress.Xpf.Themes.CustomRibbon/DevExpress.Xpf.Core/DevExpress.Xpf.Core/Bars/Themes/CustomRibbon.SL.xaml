                    <VisualState x:Name="Hot" />
                    <VisualState x:Name="ArrowHot" />
                    <VisualState x:Name="Pressed" />
                    <VisualState x:Name="ArrowPressed" />
                    <VisualState x:Name="Customization" />
                    <VisualState x:Name="Disabled">
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetName="PART_Item" Storyboard.TargetProperty="Opacity" To="{StaticResource BarItemThemeKey_DisableStateOpacityValue}" Duration="0" />
                        </Storyboard>
                    </VisualState>
                </VisualStateGroup>
            </VisualStateManager.VisualStateGroups>
        </Grid>
    </ControlTemplate>
